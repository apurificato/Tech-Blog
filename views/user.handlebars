<main class="d-flex row p-5" id="user-background">
  <h2 class="text-center pt-5">User Account Information</h2>
  <section id="user-info-display">
    <div class="row">
      <div class="col-sm-6">
        <div class="card">
          <div class="card-header">
            Account
          </div>
          <div class="card-body">
            <h5 class="card-title">Username: {{user.username}}</h5>
            <p class="card-text">Email:
              <span class="text-success">{{user.email}}</span></p>
            <a href="/updateuser" class="btn btn-success">Update Account Information</a>
            <a href="/deleteuser" class="btn btn-danger">Delete Account</a>
          </div>
        </div>
      </div>
      <div class="col-sm-6">
        <div id="user-quote" class="card">
            <div class="card-header">Blog Topic Ideas</div>
            <div class="card-body">
                <blockquote class="blockquote mb-0" id="quoteDisplay">
                <p>Click the button below to generate suggestions for a new blog post.</p>
                </blockquote>
                <div class="pt-3">
                    <button class="btn btn-success" onclick="newQuote()">Generate Topic</button>
                </div>
            </div>
        </div>
      </div>
      <div class="col-12">
        <div class="card">
          <div class="card-header">Blog Posts</div>
          <div class="card-body">
            <h5 class="card-title">Blog Post History for: {{user.username}}</h5>
            <table class="table table-sm table-dark">
              <thead>
                <tr>
                  <th scope="col">Post Name</th>
                  {{!-- <th scope="col">Date Posted</th> --}}
                </tr>
              </thead>
              <tbody>
                {{!-- {{#each blogs}} --}}
                  <tr>
                    <td>{{this.name}}</td>
                    {{!-- <td>{{this.date}}</td> --}}
                  </tr>
                {{/each}}
              </tbody>
            </table>
            <a href="/" class="btn btn-success">Post Another Blog</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<script src="/assets/js/quotes.js"></script>